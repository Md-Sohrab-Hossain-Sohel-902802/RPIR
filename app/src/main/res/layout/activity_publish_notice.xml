<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".Admin.PublishNoticeActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alertTextviewid"
        android:textSize="17sp"
        android:textColor="#000"
        android:textStyle="bold"
     android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:layout_below="@id/alertTextviewid"
        android:layout_marginBottom="10dp"
        android:id="@+id/mainimage"
        android:layout_marginTop="5dp"
      android:layout_width="240dp"
        android:layout_height="280dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <ImageView
                android:id="@+id/publishnotice_Image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:scaleType="fitXY"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/publishnotice_Image2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:visibility="gone"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/publishnoticeLInear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <ImageView
                android:id="@+id/publishnotice_Image3"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:visibility="gone"
                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/publishnotice_Image4"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile"
                    android:visibility="gone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="19sp"
                    android:textColor="#000"
                    android:id="@+id/publishnotice_showmoreTExtview"
                    />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>




    <Button
        android:layout_below="@+id/mainimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/publishnoticeSelectImageButtonid"
        android:background="@drawable/edit_bg1"
        android:layout_centerInParent="true"
        android:text="Choose Image"
        android:textAllCaps="false"
        android:textSize="17sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/publishnoticeSelectImageButtonid"
        android:layout_marginTop="10dp"
        android:hint="Enter  Notice Title"
        android:id="@+id/publish_notice_TitleEdittextid"
        android:background="@drawable/edit_bg1"
        android:textColor="#000"
        android:visibility="gone"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/publishnoticeUploadButtonid"
        android:layout_below="@+id/publish_notice_TitleEdittextid"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/edit_bg1"
        android:layout_centerInParent="true"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:textSize="17sp"
        />






</RelativeLayout>