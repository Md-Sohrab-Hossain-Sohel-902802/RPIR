<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:background="@drawable/edit_bg1"
      android:padding="20dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textAlignment="center"
        android:text="6CMTB2"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/t_routine_item_ShrtClassnameTextviewid"
        />
      <TextView
          android:layout_below="@+id/t_routine_item_ShrtClassnameTextviewid"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/t_routine_otherAllTextviewid"
          android:textSize="17sp"
          android:text="name:Md Sohrab Hossian Sohel"
          android:textColor="#000"
         />

    <Button
        android:layout_below="@+id/t_routine_otherAllTextviewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_routine_takePresentButtonid"
        android:background="@drawable/buttonbg"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="Take Present"
        android:textColor="#fff"
        android:padding="10dp"
        android:textSize="17sp"
        />

  </RelativeLayout>
</androidx.cardview.widget.CardView>